{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.eslint.json"],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {},
  "env": {
    "browser": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["test/**/*.test.ts"],
      "env": {
        "jest": true,
        "node": true
      }
    }
  ]
}